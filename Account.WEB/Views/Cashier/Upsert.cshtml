@model Account.PresentationModels.ViewModels.Cashier.CashierForUpsertVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["Title"] = "Add Cashier";
}




<div class="content d-flex flex-column flex-column-fluid fs-6" id="kt_content">
						<!--begin::Container-->
		<div class="container" id="kt_content_container">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Upsert">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @if (Model.Cashier.Id != 0)
                         {
                            //edit
                            ViewData["Title"] = "Edit Cashier";
                            <input type="hidden" asp-for="Cashier.Id" />
                         }
                        <div class="form-group">
                            <label asp-for="Cashier.CashierName" class="control-label"></label>
                            <input asp-for="Cashier.CashierName" maxlength="50" required class ="form-control"/>
                            <span asp-validation-for=Cashier.CashierName></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cashier.BranchId" class="control-label"></label>
                            <select asp-for="Cashier.BranchId" class ="form-control" asp-items="@Model.BranchList">
                                <option value="">- اختر الفرع -</option>
                            </select>
                            
                            <span asp-validation-for=Cashier.BranchId></span>
                        </div>
                        <br />
                        <div class="form-group">
                            @if(Model.Cashier.Id > 0)
                            {
                               <partial name="_EditAndBackToListButtonInt" model="Model.Cashier.Id"/>
                            }
                            else
                            {
                               <partial name="_CreateAndBackToListButton"/>
                            }

                        </div>
                    </form>
                </div>
            </div>

      </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
